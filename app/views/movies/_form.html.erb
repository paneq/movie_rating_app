<%= simple_form_for @movie, :html => { :multipart => true } do |f| %>
	<%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a category") %>
	<%= f.input  :title, label: "Movie title", placeholder: 'Movie title' %>
	<%= f.input  :description, placeholder: 'Description' %>
	<%= f.input  :director, placeholder: 'Director' %>
	<%= f.input  :movie_length, placeholder: 'Movie length' %>
	<%= f.input  :image_url, placeholder: 'Image url' %>
	<%= f.button :submit, class: "btn-custom2" %>
<% end %>